{
  "extends": "../tsconfig.json",
  "include": ["**/*.ts"],
  "exclude": ["**/*.spec.ts", "dist", "tsup.config.ts"],
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": false,
    "outDir": "dist",
    "tsBuildInfoFile": "dist/.tsbuildinfo"
  }
}
